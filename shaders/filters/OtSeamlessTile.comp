#version 450

layout(local_size_x=16, local_size_y=16) in;

layout(set=0, binding=0) uniform sampler2D inImage;
layout(set=1, binding=0, rgba8) uniform writeonly image2D outImage;

void main() {
	ivec2 coord = ivec2(gl_GlobalInvocationID.xy);
	ivec2 size = imageSize(outImage);

	if (coord.x >= size.x || coord.y >= size.y) {
		return;
	}

	vec2 uv = vec2(coord) / vec2(size);
	vec2 uv2 = vec2(fract(uv + 0.5));

	float dist = distance(uv2, vec2(0.5, 0.5));
	float alpha = clamp((dist - 0.3) / (0.5 - 0.3), 0.0, 1.0);

	vec3 color1 = texture(inImage, uv).xyz;
	vec3 color2 = texture(inImage, uv2).xyz;

    imageStore(outImage, coord, vec4(mix(color2, color1, alpha), 1.0));
}
