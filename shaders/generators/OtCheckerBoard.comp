#version 450

layout(local_size_x=16, local_size_y=16, local_size_z=1) in;
layout(set=1, binding=0, rgba8) uniform writeonly image2D outTexture;

layout(std140, set=2, binding=0) uniform UBO {
    vec4 blackColor;
    vec4 whiteColor;
    int repeat;
};

void main() {
	ivec2 coord = ivec2(gl_GlobalInvocationID.xy);
	ivec2 size = imageSize(outTexture);

	if (coord.x >= size.x || coord.y >= size.y) {
		return;
	}

	vec2 uv = vec2(coord) / vec2(size);
	vec2 st = fract(uv * repeat) - 0.5f;
	imageStore(outTexture, coord, mix(blackColor, whiteColor, step(st.x * st.y, 0.0f)));
}
